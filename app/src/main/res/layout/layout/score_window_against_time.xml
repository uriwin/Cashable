<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dana.mygame.Activities.MainActivity"
    android:background="@drawable/dark_bg">


    <TextView
        android:id="@+id/score_text"
        android:layout_width="294dp"
        android:layout_height="62dp"
        android:clickable="false"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffffff"
        android:layout_weight="0.35"
        android:layout_marginTop="132dp" />

    <TextView
        android:id="@+id/cashable"
        android:layout_width="295dp"
        android:layout_height="103dp"
        android:lineSpacingExtra="10sp"
        android:text="Cashable"
        android:textAlignment="center"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <Button
        android:id="@+id/against_time"
        android:layout_width="147dp"
        android:layout_height="73dp"
        android:text="play again"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintVertical_bias="0.796" />

    <Button
        android:id="@+id/menu"
        android:layout_width="147dp"
        android:layout_height="73dp"
        android:text="BACK TO MENU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <TextView
        android:id="@+id/higt_score_label"
        android:layout_width="298dp"
        android:layout_height="50dp"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#ffffff"
        android:layout_weight="0.35"
        android:layout_marginTop="210dp" />


</android.support.constraint.ConstraintLayout>
