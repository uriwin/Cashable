<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dana.mygame.Activities.MainActivity"
    android:background="@drawable/menu_bg">

    <ImageButton
        android:id="@+id/against_time"
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/against_time_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="154dp" />

    <ImageButton
        android:id="@+id/two_players_mode"
        android:layout_width="180dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/two_players_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="256dp" />

    <ImageButton
        android:id="@+id/back_to_menu"
        android:layout_width="57dp"
        android:layout_height="51dp"
        app:srcCompat="@drawable/back_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="472dp"
        app:layout_constraintHorizontal_bias="0.223" />

    <ImageView
        android:id="@+id/piggy"
        android:layout_width="111dp"
        android:layout_height="92dp"
        app:srcCompat="@drawable/piggy_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="431dp"
        app:layout_constraintHorizontal_bias="0.736" />

    <ImageButton
        android:id="@+id/infinity_button"
        android:layout_width="186dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/infinity_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="361dp" />

    <ImageView
        android:id="@+id/modes_title"
        android:layout_width="239dp"
        android:layout_height="60dp"
        android:layout_marginTop="66dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />

</android.support.constraint.ConstraintLayout>
